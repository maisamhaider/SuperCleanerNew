<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".views.activities.AntivirusActivity">

    <include
        android:id="@+id/layout_antivirus_scanning"
        layout="@layout/layout_antivirus_scanning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/layout_antivirus_no_thread"
        layout="@layout/layout_antivirus_no_thread"
        android:visibility="gone" />

    <include
        android:id="@+id/layout_antivirus_result"
        layout="@layout/layout_antivirus_result"
        android:visibility="gone" />

    <include
        android:id="@+id/layout_antivirus_finished"
        layout="@layout/layout_antivirus_finished"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>